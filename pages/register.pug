doctype html
html(lang="en")
  head
    include _head.pug
    //include _navbar.pug

    title Sign In

    body
      div.container
        div.row
          .col-md-6.col-md-offset-3
            h3.display-4.m-b-2 Sign Up  

            form(method='POST' action='/register')
              div.input-field.co1-s6
                input#name(type="text") 
                label(for="name") Firstname Lastname

              div.input-field.col-s6  
                input#email(type="text")
                label(for='email') Email

              div.input-field.col-s6  
                input#email2(type="text")
                label(for='email2') Repeat Email

              div.input-field.col-s6  
                input#pw(type="text")
                label(for='pw') Password

              div.input-field.col-s6  
                input#pw2(type="text")
                label(for='pw2') Confirm Password

              a#sign-up-button.btn.waves-effect.waves-light(type="submit", name="action") Sign Up
                i.material-icons send



  footer
    include _footer.pug
    include _script.pug
