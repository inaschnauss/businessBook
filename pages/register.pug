doctype html
html(lang="en")
  head
    include _head.pug
    //include _navbar.pug

    title Sign In

    body
      //include _navbar.pug
      div.container
        div.row
          .col-md-6.col-md-offset-3
            h3.display-4.m-b-2 Sign Up  

            // register form
            form(method='POST' action='/register')

              div.materialize-red-text.text-darken-2
                label(for='name') Name:
                input#name.form-control(type='text', placeholder='first and last' name='name')

              div.input-field.col-s6
                input#name2(type="text") 
                //placeholder='first and last')
                label(for="name2") Enter name   

              div.form-group
                label(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')

              div.form-group
                label(for='email') Repeat Email:
                input#cofirm-email.form-control(type='email', placeholder='name@email.com' name='email')

              div.form-group
                label(for='pw') Password:
                input#password.form-control(type='password', placeholder='ยง $ % &, 0-9, a-z', name='password')

              div.form-group
                label(for='pw2') Confirm Password:
                input#confirm-password.form-control(type='password', placeholder='ยง $ % &, 0-9, a-z', name='confirmPassword')

              a#sign-up-button.btn.waves-effect.waves-light(type="submit", name="action") Sign Up
                i.material-icons send



  footer
    include _footer.html
    include _script.pug
