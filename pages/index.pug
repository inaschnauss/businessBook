      p advanced
    div(class='col s4 center-align green' style={'width':'25vw','height':'25vw'}) 
      h3 Knowledge
      h3 Page

  div(class='blue-text text-darken-3 row')      
    div(class='col s4 center-align red darken-2' style={'width':'25vw','height':'25vw'}) 
      h3 Event 
      h3 Calendar
    div(class='col s4 center-align blue lighten-4' style={'width':'25vw','height':'25vw'}) 
      h3 Browse 
      h3 Company

