  });
  function smoothScroll(){
    console.log("hello");
    $.scrollTo($('#menudiv'), 500);
  }
//-clicked
  when 0 
    h3 username
    h3 password
    p forgot your password?
    p register
  //already signed in
  when 1
    //img profilePicture
    h3 Hello, #{username}
  //register
  when 2 
    h3 name
    h3 email
    h3 password
