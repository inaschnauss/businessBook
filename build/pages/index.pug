include _head.pug
  meta(name='viewport' content ='width=device-width, initial-scale=1')

body
  //top-banner
  div(class='cyan lighten-2' style='height: 100%;')
    .center-align(style='padding-top: 35vh;')
       a(href='/')
        img(src='images/banner.png' alt='logo' style='max-width: 70%;')
    .center-align
      a(href='javascript:smoothScroll()') 
        i(class='material-icons medium' id='arrow') keyboard_arrow_down

    //menu      
  div(class='brown lighten-5 container' id='menudiv' style='height: 90%;')
    .square
      .content#logomenu
        .table
          .table-cell
            a(href='/')
              img(class='rs' id='logomenu' src='images/bb_logo.jpg' alt='logo')
    .square
      .content.orange.lighten-3
        .table
          .table-cell.center-align
            case data.signIn
              when 0
                input.menuform(placeholder='Username' type='text')
                input.menuform(placeholder='Password' type='password')
                a(href='/profilemain#menudiv')
                  button.btn.btn-small.waves-effect.light-blue Login
                a.brown-text.text-darken-2(href='/register')
                  p#registeradvanced Register
              when 1
                h4.fontmenu.center.brown-text.text-darken-2 Hello, Shofa!
                i.material-icons.large.brown-text.text-darken-2#account(style='display:block') account_circle
                a#profilelogout.brown-text.text-darken-2(href='/musterprofile' style='margin-right: 1em;') edit profile   
                |
                a#profilelogout.brown-text.text-darken-2 log out 
              default
                a(href='/signin#menudiv') 
                  h3.fontmenu.brown-text.text-darken-2 Sign in /
                  h3.fontmenu.brown-text.text-darken-2 Register

    .square
      .content.brown.darken-2
        .table
          .table-cell.center-align
            h3.fontmenu.orange-text.text-lighten-3 Search
            form(method='POST' action='/searchindex')
              div(class='input-field')
              input.menuform(id='search' name="search", type='search' required)
              label(class='label-icon' for='search')
              i(class='material-icons')
                search
              i(class='material-icons')
                close
              button.btn-small.waves-effect.waves-light.btn.center-align.light-blue(type='submit') Search
                i.material-icons.right(style='display: block') search
              a.orange-text.text-lighten-3.right(href='/findcompany')
                p#registeradvanced advanced
    .square.brown.darken-2
      .content
        .table
          .table-cell
            div(class='center-align') 
              a(href='/musterknowledge')
                h3.fontmenu.orange-text.text-lighten-3 Knowledge
                h3.fontmenu.orange-text.text-lighten-3 Page 


    .square.cyan.lighten-2
      .content
        .table
          .table-cell
            div(class='center-align container') 
              a(href='/calendar')
                h3.fontmenu.brown-text.text-darken-2 Event Calendar
                
    .square.orange.lighten-3
      .content
        .table
          .table-cell
            div(class='center-align') 
              a(href='/mustercompany')    
              h3.fontmenu.brown-text.text-darken-2 Browse Company

