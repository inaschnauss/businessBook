include _head.pug

body
  //top-banner
  div(class='cyan lighten-2' style='height: 100%;')
    .center-align(style='padding-top: 35vh;')
      h1(class='brown-text text-darken-2')
        | 
        span(class=' orange-text text-lighten-3' style='font-weight: bold;') B 
        | u s i n e s s b o o k 
      a(href='javascript:smoothScroll()') 
        i(class='material-icons medium' id='arrow') keyboard_arrow_down

    //menu      
  div(class='brown lighten-5 container' id='menudiv' style='height: 90%;')
    .square
      .content#logomenu
        .table
          .table-cell
            img(class='rs' id='logomenu' src='images/bb_logo.jpg' alt='logo')
    .square
      .content.orange.lighten-3
        .table
          .table-cell.center-align
            case data.signIn
              when 0
                input.menuform(placeholder='Username' type='text')
                input.menuform(placeholder='Password' type='password')
                a(href='/profilemain#menudiv')
                  button.btn.btn-small.waves-effect.light-blue Login
                a.brown-text.text-darken-2(href='/register')
                  p Register
              when 1
                h4.center.brown-text.text-darken-2 Hello, Shofa!
                i.material-icons.large.brown-text.text-darken-2 account_circle
                br
                br
                br
                a.brown-text.text-darken-2(style='margin-right: 1em;') edit profile   
                |
                a.brown-text.text-darken-2 log out
                
              default
                a.brown-text.text-darken-2(href='/signin#menudiv') 
                  h3 Sign in / Register
    .square
      .content.brown.darken-2
        .table
          .table-cell
            div(class='center-align' ) 
              h3.orange-text.text-lighten-3 Search
              form
                div(class='input-field')
                input.menuform(id='search' type='search' required)
                label(class='label-icon' for='search')
                i(class='material-icons')
                  search
                i(class='material-icons')
                  close
                a.orange-text.text-lighten-3.right(href='/findcompany')
                  p advanced
    .square.brown.darken-2
      .content
        .table
          .table-cell
            div(class='center-align') 
              a.orange-text.text-lighten-3(href='https://www.wikiwand.com/de/Business')
                h3 Knowledge Page 
    .square.cyan.lighten-2
      .content
        .table
          .table-cell
            div(class='center-align container') 
              a.brown-text.text-darken-2(href='/calendar')
                h3 Event Calendar
    .square.orange.lighten-3
      .content
        .table
          .table-cell
            div(class='center-align') 
              //a(href='add page link here')    
              h3.brown-text.text-darken-2 Browse Company

